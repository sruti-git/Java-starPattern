import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
      //  char ch='A';
        for(int i=1;i<=n;i++){
            for(int s=1;s<=i-1;s++){
                System.out.print(" ");
            }
            for(int j=1;j<=2*(n-i)+1;j++){
                System.out.print("*");
       //        ch++;
            }
            System.out.println();
        }
    }
}
